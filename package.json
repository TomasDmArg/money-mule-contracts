{
  "name": "money-mule-contracts",
  "version": "1.0.0",
  "type": "module",
  "description": "MoneyMule - Milestone-Based Funding Platform for hackathon demonstration",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "deploy:local": "hardhat node",
    "deploy:contracts": "hardhat ignition deploy ignition/modules/MoneyMule.ts --network localhost",
    "demo": "hardhat run scripts/demo-setup.ts",
    "demo:local": "hardhat run scripts/demo-setup.ts --network localhost",
    "deploy:usdc": "hardhat run scripts/deploy-usdc.ts --network moneymule",
    "deploy:usdc:local": "hardhat run scripts/deploy-usdc.ts --network localhost",
    "deploy:moneymule": "hardhat run scripts/deploy-moneymule.ts --network moneymule",
    "deploy:moneymule:local": "hardhat run scripts/deploy-moneymule.ts --network localhost",
    "mint:usdc": "hardhat run scripts/mint-usdc.ts --network moneymule",
    "mint:usdc:local": "hardhat run scripts/mint-usdc.ts --network localhost",
    "verify:usdc": "hardhat run scripts/verify-contract.ts --network moneymule",
    "verify:usdc:local": "hardhat run scripts/verify-contract.ts --network localhost",
    "clean": "hardhat clean",
    "typechain": "hardhat typechain"
  },
  "keywords": [
    "ethereum",
    "solidity",
    "hardhat",
    "defi",
    "funding",
    "milestone",
    "hackathon"
  ],
  "author": "MoneyMule Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^4.0.0-next.21",
    "@nomicfoundation/hardhat-ignition": "^3.0.0-next.21",
    "@nomicfoundation/hardhat-toolbox-mocha-ethers": "^3.0.0-next.21",
    "@types/chai": "^4.3.20",
    "@types/chai-as-promised": "^8.0.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.16.0",
    "chai": "^5.2.0",
    "ethers": "^6.15.0",
    "forge-std": "github:foundry-rs/forge-std#v1.9.4",
    "hardhat": "^3.0.0-next.21",
    "mocha": "^11.7.1",
    "typescript": "~5.8.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.1.0",
    "dotenv": "^17.0.1"
  }
}
